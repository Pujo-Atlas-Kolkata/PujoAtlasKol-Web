---
import { Socials } from '@/constants';
import { DiscordIcon, RedditIcon } from '@/icons';
---

<footer class="flex justify-between p-4">
  <span class="text-left pl-16">
    Made with ❤️ by
    <a target="_blank" rel="noreferrer" href={Socials.GitHub} class="font-semibold">
      Pujo Atlas Kolkata
    </a>
  </span>
  <span class="text-right flex flex-row gap-x-2">
    <span class="font-bold">Find us on:</span>
    <a
      href={Socials.Reddit}
      target="_blank"
      rel="noreferrer"
      class="hover:underline hover:underline-offset-1 hover:decoration-2 hover:decoration-blue-600 flex flex-row gap-x-2"
      ><DiscordIcon />Discord</a
    >
    &nbsp;|&nbsp;
    <a
      href={Socials.Reddit}
      target="_blank"
      rel="noreferrer"
      class="hover:underline hover:underline-offset-1 hover:decoration-2 hover:decoration-orange-600 flex flex-row gap-x-2"
      ><RedditIcon />Reddit</a
    >
  </span>
</footer>

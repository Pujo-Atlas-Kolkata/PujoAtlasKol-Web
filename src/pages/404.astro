---
import Layout from '@/layouts/Layout.astro';
import { cn } from '@/libs/utils';
// import NavbarSmall from '@/components/shared/NavbarSmall';
---

<Layout title="404 | Page Not Found">
  <main
    class={cn(
      'flex-1 flex flex-col items-center justify-center gap-4',
      'bg-primary-background p-16',
      'rounded-l-xl shadow-l-xl',
    )}
  >
    <h1 class="text-9xl font-bold">404 !</h1>
    <p class="font-work">Uh oh! Looks like you lost your way.</p>
    <a class={cn('italic flex py-1 px-10', 'rounded-full outline outline-1', 'sm:w-auto')} href="/">
      Go back to homepage -&gt;
    </a>

    <div class="flex flex-col gap-4">
      <div class="text-left sm:hidden opacity-70">Made with ❤️ by Pujo Atlas Kolkata</div>
    </div>
  </main>
</Layout>

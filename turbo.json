{
    "$schema": "https://turborepo.com/schema.json",
    "tasks": {
        "ci:local:run-checks": {
            "cache": true,
            "dependsOn": [
                "lint",
                "format:check",
                "build:legacy"
            ]
        },
        "lint": {
            "cache": true
        },
        "format:check": {
            "cache": true
        },
        "build:legacy": {
            "cache": true
        }
    },
    "cacheDir": ".turbo"
}